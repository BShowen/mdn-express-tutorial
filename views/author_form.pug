extends layout 

block content 

  h1 #{title}

  form#author_form( method="POST" action="" )
    .form-group 
      label(for="first_name") First Name:
      input#first_name.form-control(
        type="text", 
        name="first_name", 
        required="true"
        placeholder="First Name (Christian)"
        value= (author===undefined ? '' : author.first_name)
      ) 

    .form-group
      label(for="family_name") Family Name:
      input#family_name.form-control(
        type="text", 
        name="family_name", 
        required="true"
        placeholder="Family name (Surname)"
        value= (author===undefined ? '' : author.family_name)
      )

    .form-group
      label(for="date_of_birth") Date of birth: 
      input#date_of_birth.form-control(
        type="date", 
        name="date_of_birth", 
        value=(author===undefined ? '' : author.dob_ISO_date)
      )

    .form-group
      label(for="date_of_death") Date of death: 
      input#date_of_death.form-control(
        type="date", 
        name="date_of_death", 
        value=(author===undefined ? '' : author.dod_ISO_date)
      )

    button.btn.btn-primary(type="submit" for="author_form") Submit

  if errors
    ul 
      for error in errors 
        li!= error.msg